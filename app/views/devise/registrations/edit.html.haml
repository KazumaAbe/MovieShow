= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'user-new container' } do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        %h4 Nickname
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, value: current_user.nickname, autodocus: true
          .user-image.col-md-2{ style: 'background-image: url(http://泣ける動画.com/wp-content/uploads/2015/01/t0205-01.jpg);' }
            = button_tag 'Change Image', html: { class: 'btn btn-primary' }
            = f.file_field :avatar
        %h4 Email
        = f.email_field :email, value: current_user.email, html: { class: 'user-email' }
      .col-md-12
        %h4 Member
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, value: current_user.member, html: { class: 'user-member' }
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: '30', rows: '4', value: current_user.profile, html: { class: 'user-profile' }
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, cols: '30', rows: '4', value: current_user.works, html: { class: 'user-works' }

    .row.text-center.user-btn
      = f.submit 'save', class: 'btn btn-lg btn-primary btn-block'
