.container
  = form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'container user-new'} do |f|
    .col-md-8.col-md-offsset-2
      %header.row.user-nav.row
      .col-md-12
        %h2 Create New Account
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, placeholder: 'Your Username (Max 8 characters)', autofocus: true
          .user-image.col-md-2
            = button_tag 'Add image', html: {class: 'btn-primary'}
            = f.file_field :avatar
        = f.email_field :email, placeholder: 'EmailAddress', html: {class: 'user-email'}
        = f.password_field :password, placeholder: 'Password', html:{class: 'user-password'}
      .col-md-12
        %h4 Member
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member, placeholder: 'Member of...'
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: '30', rows: '4', placeholder: 'Your Profile'
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :works, cols: '30', rows: '4', placeholder: 'Your Works'
          .row.text-center.user-btn
      = f.submit 'Create!', html: {class: 'btn btn-lg btn-primary btn-block'}