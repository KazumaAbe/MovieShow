.container
  = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} do |f| 
    %h2.form-signin-heading 
      Sign in !
      = f.label :email, 'Email address', class: 'sr-only'
      = f.email_field :email, placeholder: 'Email address', autofocus: true, id: 'inputEmail', class: 'form-control'
      = f.label :password, 'Password', class: 'sr-only'
      = f.password_field :password, placeholder: 'Password', id: "inputPassword" ,class: "form-control"
      .checkbox
        = f.label :remember_me, 'Remember me'
        = f.check_box :remember_me
      = f.submit 'sign in', class: 'btn btn-lg btn-primary btn-block'
    .text-center
      %p
        Not a member?
        %a{:href => "sign_up"} Sign up now

