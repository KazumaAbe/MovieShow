.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    = button_tag(data: { toggle: 'collapse', target: '.navbar-responsive-collapse' }, class: 'navbar-toggle') do
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to image_tag('logo.png', alt: 'MOVIE SPACE - SHARE YOUR MOVIE', height: "36px"), root_path, class: 'navbar-brand'
    .navbar-collapse.collapse.navbar-responsive-collapse

      -if user_signed_in? #login
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', aria: { expanded: false }, data: { toggle: 'dropdown' } do
              = current_user.nickname
              %span.caret
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to 'My Page', user_path(current_user)
              %li
                = link_to 'Profile Edit', edit_user_registration_path(current_user)
              %li
                = link_to 'Log Out', destroy_user_session_path, method: :delete
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'New Proto', new_proto_path

      -else #not login
        %ul.nav.navbar-nav.navbar-right
          %li
            .btn.btn-primary.navbar-btn
              = link_to 'Get Started', new_user_session_path
