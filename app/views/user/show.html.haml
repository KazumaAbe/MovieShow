.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to image_tag(current_user.avatar, alt: '64x64', data: { holder: { rendered: true } }, class: 'media-object' ), user_path
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = current_user.movies.length
            %i Projects
        .proto-user
          %span.degree
          = current_user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = current_user.profile
          .col-md-6
            %h4 Works
            %p
              = current_user.works
.container.proto-list
  .row
  -@user.movies.each do |movie|
    .col-sm-4.col-md-3.proto-content
      .thumbnail
        = link_to movie_path(movie) do
          = image_tag(movie.thumbnails[0].title)
          .caption
            %h3
              = movie.title
            .proto-meta
              .proto-user
                %a
                = link_to movie.user.nickname, user_path(movie.user)
              .proto-posted
                = movie.created_at.strftime("%b%d")
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', "#", class: 'btn-default'
              %li
                = link_to 'Wireflame', "#", class: 'btn-default'

.text-center
  %ul.pagination
    %li.disabled
      = link_to "#", aria: { label: :Previous }
        %span{ aria { hidden: true } «
    %li.active
      = link_to '1', "#"
        1
        %span.sr-only (current)
    %li
      = link_to '2', "#"
    %li
      = link_to '3', "#"
    %li
      = link_to '4', "#"
    %li
      = link_to '5', "#"
    %li
      = link_to "#", aria: { label: :next }
        %span{ aria { hidden: true } »
