.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to image_tag(@user.avatar, size: '64x64', alt: '64x64', class: 'media-object'), user_path
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @user.movies.length
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    = render @movies

.text-center
  %ul.pagination
    %li.disabled
      = link_to "#", aria: { label: :Previous } do
        %span{ aria: { hidden: true } } «
    %li.active
      = link_to '1', "#"
    %li
      = link_to '2', "#"
    %li
      = link_to '3', "#"
    %li
      = link_to '4', "#"
    %li
      = link_to '5', "#"
    %li
      = link_to "#", aria: { label: :Next } do
        %span{ aria: { hidden: true } } »
